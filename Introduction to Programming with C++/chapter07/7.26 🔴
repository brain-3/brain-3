#include <iostream>
using namespace std;

void merge(const int list1[], int size1, const int list2[], int size2, int list3[]);

int main()
{
    int list1[40];
    int list2[40];
    int list3[80];
    int size1, size2;

    cout << "Enter list1: ";
    cin >> size1;
    for (int i = 0; i < size1; i++) {
        cin >> list1[i];
    }
    
    cout << "Enter list2: ";
    cin >> size2;
    for (int i = 0; i < size2; i++) {
        cin >> list2[i];
    }

    merge(list1, size1, list2, size2, list3);
    
    return 0;
}

void merge(const int list1[], int size1, const int list2[], int size2, int list3[]) {
    for (int i = 0; i < size1 + size2; i++) {
        list3[i] = list1[i];
        list3[i + 1] = list2[i];
    }
