#include <iostream>
using namespace std;

int average(const int array[], int size);
double average(const double array[], int size);

int main() {
	const int SIZE = 10;
	double num[10];

	cout << "Enter ten numbers: ";
	for (int i = 0; i < 10; i++) {
		cin >> num[i];
	}

	cout << average(num, SIZE) << endl;

	return 0;
}

int average(const int array[], int size) {
	int sum = 0;
	int result;
	for (int i = 0; i < 10; i++) {
		sum += array[i];
	}
	result = sum / size;

	return result;
}

double average(const double array[], int size) {
	double sum = 0;
	double result;
	for (int i = 0; i < 10; i++) {
		sum += array[i];
	}
	result = sum / size;

	return result;
}
